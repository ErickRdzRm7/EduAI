// middleware/authMiddleware.js
const jwt = require('jsonwebtoken');
require('dotenv').config(); // Para process.env.JWT_SECRET

module.exports = function(req, res, next) {
  // Obtener token del encabezado Authorization: Bearer <token>
  const authHeader = req.header('Authorization');
  const token = authHeader && authHeader.startsWith('Bearer ') ? authHeader.split(' ')[1] : null;

  // Verificar si no hay token
  if (!token) {
    return res.status(401).json({ msg: 'No hay token, permiso denegado.' });
  }

  // Verificar el token
  try {
    const decoded = jwt.verify(token, process.env.JWT_SECRET);
    req.user = decoded.user; // Agrega el payload del usuario (que incluye el ID) al objeto req
                             // Asumiendo que al firmar el JWT, pusiste { user: { id: userId, ... } }
    next(); // Pasa al siguiente middleware o controlador de ruta
  } catch (err) {
    console.error('Error en middleware de autenticación:', err.message);
    res.status(401).json({ msg: 'El token no es válido.' });
  }
};